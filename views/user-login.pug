extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/log-in' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'password')
    div
      button(type='submit') Login
      a(href='/') Cancel
  div
    p: a(href='/users/sign-up') Don't have an account?
    form(action='/users/demo/log-in' method='post')
      button(type='submit') Log in as Demo User
