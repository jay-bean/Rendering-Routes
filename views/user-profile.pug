extends layout.pug

append head
    script(src="/javascripts/userEdit.js" type="module" defer)


block content
    table(id=`profile-user-${user.id}`)
        thead
            tr
                th Avatar
                th Username
                th Biography
                th Climb Lists
                th Reviews
        tbody
            tr
                th
                th= user.username
                th= user.biography
                th: a(href=`/users/${user.id}/climb-list`) Link
                th list of all users reviews

    if loggedInUser === user.id
        form(class='hidden' id=`edit-form-${user.id}`)
            label Username:
            input(type='text' name='name' value=user.name)
            label Biography:
            input(type='biography' name='biography' value=user.biography)
            label Email:
            input(type='email' name='email' value=user.email)
            button(class='edit-user-submit' id=`edit-submit-${user.id}`) Submit Edit
        button(class='edit-user-btn' id=`edit-user-${user.id}`) Edit Profile
