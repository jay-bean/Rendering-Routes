extends layout.pug

append head
    script(src="/javascripts/userEdit.js" type="module" defer)
    link(rel="stylesheet" href="/stylesheets/profile.css")


block content
    div(id=`profile-user-${user.id}` class="profile-container")
        .first-col-container
            img(src="https://plumepoetry.com/wp-content/uploads/2019/12/default-profile.png" height="250px" width="230px" id="profile-image")
            h2(id=`username-users-${user.id}` class="profile") #{user.username}
            //- label.profile Biography
            //- p(id=`bio-user-${user.id}` class="profile") #{user.biography}
            if loggedInUser === user.id
                div(id='user-error-container')
                form(class='hidden' id=`edit-form-${user.id}`)
                    label Username:
                    input(type='text' name='username' value=user.username id=`edit-username-user${user.id}`)
                    label Biography:
                    input(type='text' name='biography' value=user.biography id=`edit-bio-user${user.id}`)
                    label Email:
                    input(type='email' name='email' value=user.email id=`edit-email-user${user.id}`)
                    label Password:
                    input(type='text' name='password' value='' id=`edit-password-user${user.id}`)
                    label Confirm Password:
                    input(type='text' name='confirmPassword' value='' id=`confirm-password-user${user.id}`)
                    button(class="edit-user-submit" id=`edit-submit-user${user.id}`) Submit Edit
                button(class='edit-user-btn' id=`edit-user-${user.id}`) Edit Profile
            a(href=`/users/${user.id}/climb-list` class="profile") View Climb Lists
            a(href=`/users/${user.id}/reviews` class="profile") Go to all your Reviews
        .second-col-container
            div.profile-routes
                label User's routes
                each route in routes
                    ul
                        li= route.name
        .third-col-container
            div.profile-crags
                label User's crags
                each crag in crags
                    ul
                        li= crag.name
