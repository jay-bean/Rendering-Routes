extends layout.pug
append head
  link(rel="stylesheet" href="/stylesheets/new-crag.css")
include utils.pug

block content
  .add-crag-container
    .add-crag-form-container
      +validationErrorSummary(errors)
      +validationErrorSummary(errors)
      div.header
        h2.title Post a Crag
        p.info *If a crag does not exist for your route, please create a crag
      form(action='/crags' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        label.addcrag Name
        input(type="text" class="" name="name" value=crag.name)
        label.addcrag Location
        input(type="text" class="" name="location" value=crag.location placeholder= 'ex: \'Chestnut Hill, Massachusetts\'')
        label.addcrag Upload an Image
        input(type="text" class="" name="image" value=crag.image placeholder= 'Optional')
        label.addcrag Description
        textarea(name="description" class="section" rows='5' cols='30')=crag.descriptiom
        button(type='submit' class="button") Create
        a(href='/' class="cancel") Cancel
