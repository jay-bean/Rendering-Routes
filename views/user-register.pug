extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/sign-up' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', user.username)
    +field('Email Address', 'email', user.email)
    +field('Biography', 'biography', user.biography)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password')
    div
      button(type='submit' ) Register
      a(href='/' ) Cancel
  div
    p: a(href='/users/log-in') Already have an account?
    form(action='/users/demo/log-in' method='post')
      button(type='submit') Log in as Demo User
