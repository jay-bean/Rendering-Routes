doctype html
html
  head
      block head
        title="Rendering Routes"
        link(rel='stylesheet' href='/stylesheets/main.css')
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Abhaya+Libre:wght@400;500;600&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet")
  body
    div(id='nav-bar-container')
      a(href='/')
        img(src='../images/rendering-routes-logo.png')
      div(id='nav-bar-navigations')
        a(href='/routes' class='navbar-navigations') Routes
        p(class='bar') |
        a(href='/crags' class='navbar-navigations') Crags
        p(class='bar') |
        a(href='/users' class='navbar-navigations') People
        p(class='bar') |
        a(href='/contact-us' class='navbar-navigations') Contact Us
      if locals.authenticated
        div(id='nav-bar-profile-info')
          p(id='nav-welcome') Welcome #{locals.user.username}!
          form(action='/users/log-out' method='post')
            button(type='submit' id='nav-logout-button') Logout
          a(href=`/users/${user.id}` id='nav-profile-button') My Profile
      else
        div(id='nav-bar-login-signup')
          a(href='/users/log-in' id='nav-login-button') Login
          a(href='/users/sign-up' id='nav-signup-button') Sign Up

    block content
